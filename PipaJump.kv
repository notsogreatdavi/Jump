#:import random random
#:import CardTransition kivy.uix.screenmanager.CardTransition

<GameScreen>:
    canvas:
        Rectangle:
            pos: self.pos
            size: self.size
            source: 'background.png'
    FloatLayout:
        GameView:
            id: game
        Button:
            canvas.before:
                Color:
                    rgba: 255, 255, 0, 0.6
                RoundedRectangle:
                    size: self.size
                    pos: self.pos
            size_hint: None, None
            pos: self.parent.width - self.width - 10, self.parent.height - self.height - 10
            font_size: 24
            text: 'Pause'
            size: 100, 100
            background_color: 0, 0, 0, 0
            on_press: game.pause_game() if game.game_has_started else game.start_game()
            on_release: self.text = 'Pause' if game.game_has_started else 'Resume'

        Label:
            size_hint: None, None
            font_size: 40
            size: self.texture_size
            color: 0.6637, 0.004, 0.506, 1
            pos: 10, self.parent.height - self.height
            text: 'Score: ' + str(game.score)

<MenuScreen>:
    canvas:
        Rectangle:
            pos: self.pos
            size: self.size
            source: 'menu_background.png'
    BoxLayout:
        size_hint: None, None
        size: 600, 300
        orientation: 'vertical'
        center: root.center
        Label:
            text: 'PipaJumper'
            font_size: 50
            font_name:'Roboto-BoldItalic'
            text_size: self.size
#            color: 0.2588, 0.9608, 0.306
            color: 1, 1, 1
            halign: 'center'
            valign: 'center'

        AnchorLayout:
            Button:
                text: 'Start'
                size_hint: None, None
                font_size: 32
                font_name:'Roboto-Bold'
                size: self.texture_size
                color: 1, 1, 1
                background_normal: ''
                background_color: 0.004, 0.522, 0.694, 1
                padding: 20, 20
                on_release: root.manager.current = 'kite_selection'
        AnchorLayout:
            Button:
                text: 'Quit'
                size_hint: None, None
                font_size: 32
                font_name:'Roboto-Bold'
                size: self.texture_size
                color: 1, 1, 1
                background_normal: ''
                background_color: 0.004, 0.522, 0.694, 1
                padding: 20, 20
                on_release: exit()

